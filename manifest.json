{
  "manifest_version": 3,
  "name": "Swagger Copy URL",
  "version": "1.0",
  "description": "Add a 'Copy URL' button to Swagger page.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/swagger*"],
      "js": ["content.js"]
    }
  ]
}

